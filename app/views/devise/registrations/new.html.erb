<div class="container mt-5" style="max-width: 380px;">
  <!-- ロゴ -->
  <div class="text-center mb-3">
    <%= image_tag "logo.png", alt: "SanpoApp ロゴ", class: "mx-auto d-block", style: "height: 64px;" %>
  </div>

  <!-- タイトル -->
  <h2 class="text-center mb-2"><%= t("devise.registrations.new.sign_up") %></h2>
  <p class="text-center text-muted mb-4"><%= t("devise.registrations.new.app_description") %></p>

  <!-- フォーム -->
  <%= form_for(resource,
               as: resource_name,
               url: registration_path(resource_name),
               data: { turbo: false },
               local: true) do |f| %>

    <div class="mb-3">
      <%= f.label :username, t("devise.registrations.new.username") %>
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, t("devise.registrations.new.email") %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, t("devise.registrations.new.password") %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, t("devise.registrations.new.password_confirmation") %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <!-- 説明文 -->
    <div class="text-muted small mb-3">
      ・<%= t("devise.registrations.new.username_rule") %><br>
      ・<%= t("devise.registrations.new.password_rule") %>
    </div>

    <%= f.submit t("devise.registrations.new.sign_up"), class: "btn btn-primary w-100 mt-3" %>
  <% end %>

  <!-- リンク群 -->
  <div class="text-center mt-3">
    <%= link_to t("devise.registrations.new.already_have_account"), new_session_path(resource_name), class: "text-decoration-none text-muted d-block" %>
  </div>

  <!-- フッター -->
  <footer class="text-center mt-5 mb-3 small text-muted">
    <%= link_to t("devise.registrations.new.terms"), terms_path, class: "me-3 text-decoration-none" %>
    <%= link_to t("devise.registrations.new.privacy"), privacy_path, class: "me-3 text-decoration-none" %>
  </footer>
</div>
