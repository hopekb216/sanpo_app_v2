<div class="container mt-4" style="max-width: 500px;">

  <h2><%= t("devise.registrations.edit.title") %></h2>

  <% if flash[:error].present? %>
    <div class="error-messages mb-3">
      <h4><%= t("devise.registrations.edit.error_title") %></h4>
      <ul>
        <% flash[:error].each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="field mb-3">
      <%= f.label :username, t("devise.registrations.edit.username") %><br />
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>

    <div class="field mb-3">
      <%= f.label :current_password, t("devise.registrations.edit.current_password") %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.registrations.edit.update"), class: "btn btn-primary" %>
    </div>

  <% end %>

  <p class="mt-3">
    <%= link_to t("devise.registrations.edit.back_to_mypage"), mypage_path, class: "btn btn-secondary" %>
  </p>

</div>
