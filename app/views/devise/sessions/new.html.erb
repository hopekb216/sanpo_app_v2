<div class="container mt-5" style="max-width: 380px;">
  <!-- ロゴ -->
  <div class="text-center mb-3">
    <%= image_tag "logo.png", alt: "SanpoApp ロゴ", class: "mx-auto d-block", style: "height: 64px;" %>
  </div>

  <!-- タイトル -->
  <h2 class="text-center mb-2"><%= t("devise.sessions.new.sign_in") %></h2>
  <p class="text-center text-muted mb-4"><%= t("devise.sessions.new.app_description") %></p>

  <!-- フォーム -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, t("devise.sessions.new.email") %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, t("devise.sessions.new.password") %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, t("devise.sessions.new.remember_me"), class: "form-check-label" %>
      </div>
    <% end %>

    <%= f.submit t("devise.sessions.new.sign_in"), class: "btn btn-primary w-100 mt-3" %>
  <% end %>

  <!-- リンク群 -->
  <div class="text-center mt-3">
    <%= link_to t("devise.sessions.new.forgot_password"), new_password_path(resource_name), class: "text-decoration-none text-muted d-block mb-2" %>
    <%= link_to t("devise.sessions.new.no_account"), new_registration_path(resource_name), class: "text-decoration-none text-muted d-block" %>
  </div>
</div>
