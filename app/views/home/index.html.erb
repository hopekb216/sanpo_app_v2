<p class="welcome-message"><%= t("courses.index.welcome") %></p>

<% if user_signed_in? %>
  <div class="actions mb-3">
    <%= link_to t("courses.index.new_course"), new_course_path, class: "btn btn-primary" %>
  </div>
<% end %>

<hr>

<div class="course-list">
  <% @courses.each do |course| %>
    <div class="course-card">

      <% if course.image.attached? %>
        <%= image_tag course.image, class: "course-thumb" %>
      <% else %>
        <%= image_tag "default_course.png", class: "course-thumb" %>
      <% end %>

      <h2><%= link_to course.title, course_path(course) %></h2>

      <p>
        <%= t("courses.index.posted_at") %>：
        <%= l(course.created_at, format: :default) %>
      </p>

      <p>
        <%= t("courses.index.author") %>：
        <%= link_to course.user.username, user_path(course.user) %>
      </p>

    </div>
  <% end %>
</div>

<%= paginate @courses %>
