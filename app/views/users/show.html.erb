<div class="profile-page">

  <!-- ユーザー名 -->
  <h2 class="profile-name">
    <%= t("users.profile.title", username: @user.username) %>
  </h2>

  <!-- アイコン -->
  <div class="profile-icon-wrapper">
    <%= image_tag "default_icon.png", class: "profile-icon" %>
  </div>

  <!-- 投稿一覧タイトル -->
  <h3 class="profile-posts-title"><%= t("users.profile.posts_title") %></h3>

  <!-- 投稿カード一覧 -->
  <div class="course-list">
    <% @courses.each do |course| %>
      <div class="course-card">

        <% if course.image.attached? %>
          <%= image_tag course.image, class: "course-thumb" %>
        <% else %>
          <%= image_tag "default_course.png", class: "course-thumb" %>
        <% end %>

        <h2><%= link_to course.title, course_path(course) %></h2>

        <p>
          <%= t("users.profile.posted_at") %>：
          <%= l(course.created_at, format: :default) %>
        </p>

      </div>
    <% end %>
  </div>

  <!-- ページネーション -->
  <%= paginate @courses %>

</div>
